<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B101A"
    android:padding="18dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- ===================== SCREEN HEADER ===================== -->
        <TextView
            android:id="@+id/tvBudgetHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly Budget"
            android:textColor="#0A0F1C"
            android:textStyle="bold"
            android:textSize="22sp"
            android:gravity="start"
            android:paddingVertical="6dp" />


        <!-- ===================== TOTAL BUDGET CARD ===================== -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBudgetSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="21dp"
            app:cardCornerRadius="19dp"
            app:cardElevation="10dp"
            app:strokeWidth="1dp"
            app:strokeColor="#CBD5E1"
            app:cardBackgroundColor="#0E1A2B">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMonthName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="January 2025"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tvSpentBudget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹0"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tvPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0% used"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>


                <TextView
                    android:id="@+id/tvTotalBudget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹ 0.00"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/tvRemainingBudget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remaining: ₹ 0.00"
                    android:textSize="15sp"
                    android:textColor="#C2C9D6"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- ===================== ADD CATEGORY BUTTON ===================== -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Add Category"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#0EA5E9"
            app:cornerRadius="20dp" />


        <!-- ===================== CATEGORY TITLE ===================== -->
        <TextView
            android:id="@+id/tvCategorySectionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Budget Categories"
            android:textColor="#0A0F1C"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp" />


        <!-- ===================== CATEGORY LIST ===================== -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false" />


        <!-- Extra Padding at bottom so last item not hidden behind nav -->
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
