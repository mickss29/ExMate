<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E1621"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ================= TITLE ================= -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Budget"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <!-- ================= PERIOD TYPE ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMonthly"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Monthly"
                android:backgroundTint="#1E88E5"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnYearly"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Yearly"
                android:backgroundTint="#1F2A38"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- ================= MONTH / YEAR ================= -->
        <TextView
            android:id="@+id/tvSelectedMonth"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="January 2026"
            android:textColor="@android:color/white"
            android:background="#1F2A38" />

        <!-- ================= TOTAL BUDGET ================= -->
        <TextView
            android:layout_marginTop="20dp"
            android:text="Total Budget"
            android:textColor="#B0BEC5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etTotalBudget"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter amount"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textColorHint="#78909C"
            android:background="#1F2A38"
            android:padding="12dp" />

        <!-- ================= CARRY FORWARD ================= -->
        <CheckBox
            android:id="@+id/cbCarryForward"
            android:layout_marginTop="12dp"
            android:text="Carry forward unused budget"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- ================= SAVE BUDGET ================= -->
        <Button
            android:id="@+id/btnSaveBudget"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:text="SAVE BUDGET"
            android:backgroundTint="#1E88E5"
            android:textColor="@android:color/white" />

        <!-- ================= SUMMARY CARD ================= -->
        <LinearLayout
            android:id="@+id/cardBudgetSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#162434"
            android:visibility="gone">

            <TextView
                android:text="Budget Summary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvSummaryMonth"
                android:text="January 2026"
                android:textColor="#B0BEC5"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvSummaryAmount"
                android:text="₹ 0"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvSummaryCarry"
                android:text="Carry forward: No"
                android:textColor="#90CAF9"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- ================= CATEGORY WISE ================= -->
        <TextView
            android:layout_marginTop="24dp"
            android:text="Category-wise Budget"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- CATEGORY ROWS ONLY -->
        <LinearLayout
            android:id="@+id/layoutCategoryBudgets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Food -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Food"
                    android:textColor="@android:color/white" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:hint="₹"
                    android:inputType="number"
                    android:textColor="@android:color/white"
                    android:textColorHint="#78909C"
                    android:background="#1F2A38"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Transport -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Transport"
                    android:textColor="@android:color/white" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:hint="₹"
                    android:inputType="number"
                    android:textColor="@android:color/white"
                    android:textColorHint="#78909C"
                    android:background="#1F2A38"
                    android:padding="8dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- ================= REMAINING & SAVE CATEGORY ================= -->
        <TextView
            android:id="@+id/tvRemainingBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining: ₹ 0"
            android:textColor="#90CAF9"
            android:layout_marginTop="6dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnSaveCategoryBudget"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:text="SAVE CATEGORY BUDGET"
            android:backgroundTint="#512DA8"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
