<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0F1C"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ================= PROFILE HEADER ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_user"
                android:padding="16dp"
                android:background="@drawable/bg_glass_card"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="User"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="email@example.com"
                android:textColor="#9CA3AF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvUserPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#9CA3AF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- ================= SETTINGS ================= -->

        <include
            android:id="@+id/itemProfileInfo"
            layout="@layout/row_profile_item"
            android:background="@drawable/bg_row_card" />

        <!-- ðŸ”’ APP LOCK (RESTORED) -->
        <include
            android:id="@+id/itemAppLock"
            layout="@layout/row_profile_item_switch"
            android:background="@drawable/bg_row_card" />

        <include
            android:id="@+id/itemSubscription"
            layout="@layout/row_profile_item"
            android:background="@drawable/bg_row_card" />

        <include
            android:id="@+id/itemAbout"
            layout="@layout/row_profile_item"
            android:background="@drawable/bg_row_card" />

        <include
            android:id="@+id/itemTerms"
            layout="@layout/row_profile_item"
            android:background="@drawable/bg_row_card" />

        <include
            android:id="@+id/itemPrivacy"
            layout="@layout/row_profile_item"
            android:background="@drawable/bg_row_card" />

        <!-- ================= LOGOUT ================= -->

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Logout"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#EF4444" />

        <TextView
            android:id="@+id/tvFeedbackStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

    </LinearLayout>

</ScrollView>
