<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <!-- ===== TITLE ===== -->
        <TextView
            android:id="@+id/tvMonthTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spent in January"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#111827"/>

        <!-- ===== CHART + STATS ROW ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- PIE CHART -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="160dp"
                android:layout_height="160dp"/>

            <!-- RIGHT STATS -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/tvTotalBudget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Budget\n₹0"
                    android:textSize="14sp"
                    android:textColor="#6B7280"/>

                <TextView
                    android:id="@+id/tvSpent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spent\n₹0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#DC2626"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvAvailable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available\n₹0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#16A34A"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvUnallocated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unallocated\n₹0"
                    android:textSize="13sp"
                    android:textColor="#9CA3AF"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- DIVIDER -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="#E5E7EB"/>

        <!-- ===== MINI STATS ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvIncome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Income\n₹0"
                android:textSize="14sp"
                android:textColor="#2563EB"/>

            <TextView
                android:id="@+id/tvExpense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Expense\n₹0"
                android:textSize="14sp"
                android:textColor="#DC2626"/>

            <TextView
                android:id="@+id/tvSavings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Savings\n₹0"
                android:textSize="14sp"
                android:textColor="#7C3AED"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
