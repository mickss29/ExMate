<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#0A0F1C">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ðŸ” TOP BAR -->
        <LinearLayout
            android:id="@+id/statTopBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#0D1B2A"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Statistics"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Understand your spending better"
                android:textSize="13sp"
                android:textColor="#B0BEC5"/>
        </LinearLayout>

        <!-- ðŸ§­ TIME FILTER -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupRange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:singleLine="true"
            app:chipSpacing="8dp"
            app:layout_constraintTop_toBottomOf="@id/statTopBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_chip_selected"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Month"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_chip_unselected"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Year"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_chip_unselected"/>
        </com.google.android.material.chip.ChipGroup>

        <!-- ðŸ§  INSIGHT -->
        <TextView
            android:id="@+id/txtInsight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:padding="14dp"
            android:text="ðŸ“Š Insights about your spending will appear here"
            android:textColor="#FFD54F"
            android:textSize="14sp"
            android:background="@drawable/bg_stat_insight"
            app:layout_constraintTop_toBottomOf="@id/chipGroupRange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- ðŸ¥§ PIE CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPieDesign"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/txtInsight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_stat_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Pie Chart Here"
                    android:textColor="#90A4AE"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- ðŸ“ˆ BAR CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBarDesign"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/cardPieDesign"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_stat_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Bar / Line Chart Here"
                    android:textColor="#90A4AE"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- ðŸ“‹ CATEGORY TITLE -->
        <TextView
            android:id="@+id/txtCategoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category Breakdown"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardBarDesign"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
