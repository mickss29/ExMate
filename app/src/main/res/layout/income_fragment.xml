<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B101A"
    android:fitsSystemWindows="true"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="30dp"
    android:paddingTop="100dp"> <!-- ðŸ‘ˆ EXTRA NOTCH SAFE SPACE -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- ðŸ’° Income Amount -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Income Amount"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etIncomeAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your income"
            android:inputType="numberDecimal"
            android:textColor="@android:color/white"
            android:textColorHint="@color/premiumHintColor"
            android:backgroundTint="@color/premiumInputTint"
            android:padding="14dp" />

        <!-- ðŸ“‚ Income Source -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Income Source"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="6dp" />

        <Spinner
            android:id="@+id/spIncomeSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background" />

        <!-- ðŸ’³ Payment Mode -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Mode"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="6dp" />

        <Spinner
            android:id="@+id/spPaymentMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background" />

        <!-- ðŸ“† Date -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etIncomeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Date"
            android:focusable="false"
            android:clickable="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/premiumHintColor"
            android:backgroundTint="@color/premiumInputTint"
            android:padding="14dp" />

        <!-- ðŸ“ Note -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note (optional)"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etIncomeNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Message, remarks, etc."
            android:textColor="@android:color/white"
            android:textColorHint="@color/premiumHintColor"
            android:backgroundTint="@color/premiumInputTint"
            android:padding="14dp" />

        <!-- ðŸŸ¢ BUTTONS CONTAINER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <!-- ðŸ”˜ Save Income -->
            <Button
                android:id="@+id/btnSaveIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Income"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/premiumButtonColor"
                android:padding="16dp" />

            <!-- ðŸ”„ Save & Add New -->
            <Button
                android:id="@+id/btnSaveAddNewIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add New"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="#2A4158"
                android:layout_marginTop="12dp"
                android:padding="16dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
