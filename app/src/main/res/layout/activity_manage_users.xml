<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/admin_gradient_bg">

    <!-- CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/usersToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:title="Manage Users"
            android:titleTextColor="@android:color/white"
            android:background="@color/premiumToolbarColor"
            android:padding="16dp"/>

        <!-- ðŸ”¥ FILTER + SEARCH BAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Search -->
            <EditText
                android:id="@+id/etSearchUser"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Search name, email, phone"
                android:padding="12dp"
                android:background="@drawable/bg_search"
                android:inputType="text"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="8dp"/>

            <!-- Filter Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnWeek"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="This Week"/>

                <Button
                    android:id="@+id/btnMonth"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="This Month"
                    android:layout_marginStart="6dp"/>

                <Button
                    android:id="@+id/btnDate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Pick Date"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerUsers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:clipToPadding="false"/>
    </LinearLayout>

    <!-- ðŸ”¥ EXPORT FLOATING BUTTON -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabExport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/ic_export"
        android:contentDescription="Export"
        android:tint="@android:color/white"
        app:backgroundTint="@color/premiumToolbarColor"
        android:layout_gravity="bottom|end"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
