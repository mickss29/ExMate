<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B101A"
    android:fitsSystemWindows="true"
    android:paddingTop="100dp"
    android:paddingBottom="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <!-- ===== GLASS CARD ===== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#121A2A"
            app:cardCornerRadius="22dp"
            app:cardElevation="12dp"
            app:strokeColor="#1F2A44"
            app:strokeWidth="1dp"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- ðŸ’¸ TITLE -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Expense"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="18dp"/>

                <!-- ðŸ’° AMOUNT (HERO FIELD) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"/>

                <EditText
                    android:id="@+id/etExpenseAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="â‚¹ 0.00"
                    android:inputType="numberDecimal"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/premiumHintColor"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/premiumInputTint"
                    android:padding="16dp"/>

                <!-- ðŸ· CATEGORY -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="6dp"/>

                <Spinner
                    android:id="@+id/spExpenseCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/premium_spinner_bg"
                    android:popupBackground="#121A2A"/>



                <!-- ðŸ’³ PAYMENT MODE -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payment Mode"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="6dp"/>
                <Spinner
                    android:id="@+id/spExpensePaymentMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/premium_spinner_bg"
                    android:popupBackground="#121A2A"/>



                <!-- ðŸ“† DATE -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="6dp"/>

                <EditText
                    android:id="@+id/etExpenseDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select date"
                    android:focusable="false"
                    android:clickable="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/premiumHintColor"
                    android:backgroundTint="@color/premiumInputTint"
                    android:padding="16dp"/>

                <!-- ðŸ“ NOTE -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Note (optional)"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="6dp"/>

                <EditText
                    android:id="@+id/etExpenseNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Message, remarks, etc."
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/premiumHintColor"
                    android:backgroundTint="@color/premiumInputTint"
                    android:padding="16dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ===== ACTION BUTTONS ===== -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnSaveExpense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Expense"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_press_anim"
                android:padding="18dp"/>

            <ProgressBar
                android:id="@+id/progressSave"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </FrameLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>
