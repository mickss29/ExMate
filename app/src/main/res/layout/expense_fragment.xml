<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:background="#F2F0EF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <!-- ===== HERO CARD ===== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#0E1A2B"
            app:cardCornerRadius="28dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="26dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Expense"
                    android:textColor="#CBD5E1"
                    android:textSize="13sp"/>

                <EditText
                    android:id="@+id/etExpenseAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:hint="â‚¹ 0.00"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:textColor="#F7F9FC"
                    android:textColorHint="#64748B"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:backgroundTint="#EF4444"
                    android:padding="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Enter your expense amount"
                    android:textColor="#94A3B8"
                    android:textSize="12sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ===== DETAILS CARD ===== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="26dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textColor="#64748B"
                    android:textSize="12sp"/>

                <Spinner
                    android:id="@+id/spExpenseCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="18dp"
                    android:background="#E5E7EB"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Payment Mode"
                    android:textColor="#64748B"
                    android:textSize="12sp"/>

                <Spinner
                    android:id="@+id/spExpensePaymentMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="18dp"
                    android:background="#E5E7EB"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Date"
                    android:textColor="#64748B"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/etExpenseDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:hint="Select date"
                    android:focusable="false"
                    android:clickable="true"
                    android:textColor="#0E1A2B"
                    android:textColorHint="#94A3B8"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Note (optional)"
                    android:textColor="#94A3B8"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/etExpenseNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:hint="Message, remarks, etc."
                    android:textColor="#0E1A2B"
                    android:textColorHint="#94A3B8"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ===== SAVE ===== -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">

            <Button
                android:id="@+id/btnSaveExpense"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Save Expense"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_press_anim"/>

            <ProgressBar
                android:id="@+id/progressSave"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </FrameLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
