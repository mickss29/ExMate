<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B101A"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Amount -->
        <EditText
            android:id="@+id/etIncomeAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Income Amount"
            android:inputType="numberDecimal"
            android:textColor="@android:color/white"
            android:textColorHint="@color/premiumHintColor"
            android:backgroundTint="@color/premiumInputTint"/>

        <!-- Source Spinner -->
        <Spinner
            android:id="@+id/spIncomeSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/spinner_background"/>

        <!-- Date Picker (Click EditText) -->
        <EditText
            android:id="@+id/etIncomeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Select Date"
            android:focusable="false"
            android:clickable="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/premiumHintColor"
            android:backgroundTint="@color/premiumInputTint"/>

        <!-- Payment Mode -->
        <Spinner
            android:id="@+id/spPaymentMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/spinner_background"/>

        <!-- Optional Note -->
        <EditText
            android:id="@+id/etIncomeNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Note (optional)"
            android:textColor="@android:color/white"
            android:textColorHint="@color/premiumHintColor"
            android:backgroundTint="@color/premiumInputTint"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Save Income"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/premiumButtonColor"/>

    </LinearLayout>
</ScrollView>
