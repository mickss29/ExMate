<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FB">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ================= TOP CARD ================= -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spent in January"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#6B7280"
                        android:layout_gravity="center_horizontal"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/pieChartBudget"
                            android:layout_width="140dp"
                            android:layout_height="140dp" />


                        <!-- SUMMARY -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Budget"
                                android:textColor="#6B7280"/>

                            <TextView
                                android:id="@+id/tvTotalBudget"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹ 150000"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_marginTop="10dp"
                                android:text="Total Spent"
                                android:textColor="#6B7280"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvTotalSpent"
                                android:text="₹ 1500 (From Budget)"
                                android:textColor="#EF4444"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_marginTop="10dp"
                                android:text="Available Budget"
                                android:textColor="#6B7280"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                            <TextView
                                android:id="@+id/tvAvailableBudget"
                                android:text="₹ 148500"
                                android:textColor="#16A34A"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvUnallocatedBudget"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Unallocated\n₹0"
                                android:textSize="13sp"
                                android:textColor="#6B7280"
                                android:layout_marginTop="8dp"/>


                        </LinearLayout>
                    </LinearLayout>

                    <!-- DIVIDER -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="14dp"
                        android:background="#E5E7EB"/>

                    <!-- INCOME / EXPENSE / SAVINGS -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:text="Income"
                                android:textColor="#6B7280"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:text="₹ 0"
                                android:textColor="#16A34A"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:text="Expenses"
                                android:textColor="#6B7280"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:text="₹ 1500"
                                android:textColor="#EF4444"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:text="Left for Savings"
                                android:textColor="#6B7280"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:text="₹ 148500"
                                android:textColor="#7C3AED"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ================= CATEGORY TITLE ================= -->
            <TextView
                android:layout_marginTop="22dp"
                android:text="Budgeted Categories"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- ================= CATEGORY LIST ================= -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBudgetCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </ScrollView>

    <!-- FLOATING EDIT BUTTON -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabEditBudget"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_edit"
        app:backgroundTint="#7C3AED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
