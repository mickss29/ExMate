<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_premium"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="26dp"
        android:gravity="center_horizontal">

        <!-- APP TITLE -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back ðŸ‘‹"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:fontFamily="sans-serif-bold"
            android:layout_marginTop="70dp"/>

        <TextView
            android:id="@+id/subTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login to continue your journey"
            android:textColor="#D8FFFFFF"
            android:textSize="15sp"
            android:layout_marginBottom="40dp"
            android:fontFamily="sans-serif-medium"/>

        <!-- TOGGLE SIGN IN / SIGN UP -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_toggle"
            android:padding="4dp"
            android:orientation="horizontal"
            android:elevation="6dp"
            android:layout_marginBottom="28dp">

            <Button
                android:id="@+id/btnSwitchSignIn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Sign In"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/bg_toggle_selected"/>

            <Button
                android:id="@+id/btnSwitchSignUp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Sign Up"
                android:textColor="#A8FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <!-- NAME -->
        <EditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:visibility="gone"
            android:hint="Full Name"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:paddingStart="18dp"
            android:background="@drawable/bg_input_field"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="15dp"/>

        <!-- EMAIL -->
        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:hint="Email address"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:paddingStart="18dp"
            android:background="@drawable/bg_input_field"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="15dp"/>

        <!-- PASSWORD -->
        <EditText
            android:id="@+id/passInput"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:paddingStart="18dp"
            android:background="@drawable/bg_input_field"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/forgotPasswordText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:gravity="end"
            android:layout_marginBottom="22dp"/>

        <!-- CONFIRM PASSWORD -->
        <EditText
            android:id="@+id/confirmPassInput"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:visibility="gone"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:paddingStart="18dp"
            android:background="@drawable/bg_input_field"
            android:layout_marginBottom="18dp"
            android:fontFamily="sans-serif"/>

        <!-- ACTION BUTTON -->
        <Button
            android:id="@+id/btnMainAction"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="Sign In"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="sans-serif-bold"
            android:background="@drawable/bg_primary_button"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"/>

        <!-- OR -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or continue with"
            android:textColor="#FFFFFF"
            android:layout_margin="16dp"
            android:fontFamily="sans-serif"/>

        <!-- GOOGLE BUTTON -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:background="@drawable/bg_input_field"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue with Google"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginStart="12dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <!-- APPLE BUTTON -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:background="@drawable/bg_input_field"
            android:layout_marginBottom="30dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue with Apple"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginStart="12dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
