<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B101A"
    android:paddingVertical="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="18dp">

        <!-- ðŸ”· HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="22sp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/ic_user"
                android:tint="#FFFFFF"/>
        </LinearLayout>


        <!-- â­ SECTION TITLE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="General Settings"
            android:textColor="#E5E7EB"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="10dp"/>


        <!-- GLASS PANEL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_glass_panel"
            android:paddingVertical="8dp"
            android:paddingHorizontal="6dp"
            android:layout_marginBottom="22dp">

            <include layout="@layout/row_profile_item"
                android:id="@+id/rowProfileInfo"
                android:tag="Profile info"/>

            <include layout="@layout/row_profile_item_switch"
                android:id="@+id/rowAppLock"
                android:tag="App lock"/>

            <include layout="@layout/row_profile_item"
                android:id="@+id/rowRateApp"
                android:tag="Rate App"/>

            <include layout="@layout/row_profile_item"
                android:id="@+id/rowSubscription"
                android:tag="Subscription"/>

            <include layout="@layout/row_profile_item"
                android:id="@+id/rowInvite"
                android:tag="Invite Friend amp; Family"/>
        </LinearLayout>



        <!-- â­ SECTION TITLE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help &amp; Support"
            android:textColor="#E5E7EB"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <!-- GLASS PANEL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_glass_panel"
            android:paddingVertical="8dp"
            android:paddingHorizontal="6dp">

            <include layout="@layout/row_profile_item"
                android:id="@+id/rowFinancialSupport"
                android:tag="Financial Support"/>

            <include layout="@layout/row_profile_item"
                android:id="@+id/rowWhatsNew"
                android:tag="What's New"/>
        </LinearLayout>


        <!-- ðŸš¨ LOGOUT -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#E11D48"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>
