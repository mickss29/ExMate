<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingTop="14dp"
    android:paddingBottom="30dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/txtAddTransactionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Transaction"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:paddingTop="8dp"
            android:paddingBottom="16dp" />

        <!-- ADD EXPENSE -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/optionAddExpense"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#FF3D47"
            app:cardBackgroundColor="#200E0E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="➖ Add Expense"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FF3D47" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ADD INCOME -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/optionAddIncome"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#22C55E"
            app:cardBackgroundColor="#18221A">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="➕ Add Income"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#22C55E" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
