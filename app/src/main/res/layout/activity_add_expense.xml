<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="#0B101A"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Expense Amount -->
        <EditText
            android:id="@+id/etExpenseAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Expense Amount"
            android:inputType="numberDecimal"
            android:textColor="@android:color/white"
            android:textColorHint="@color/premiumHintColor"
            android:backgroundTint="@color/premiumInputTint"/>

        <!-- Category Spinner -->
        <Spinner
            android:id="@+id/spExpenseCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/spinner_background"/>

        <!-- Date Picker -->
        <EditText
            android:id="@+id/etExpenseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Select Date"
            android:focusable="false"
            android:clickable="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/premiumHintColor"
            android:backgroundTint="@color/premiumInputTint"/>

        <!-- Payment Mode -->
        <Spinner
            android:id="@+id/spExpensePaymentMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/spinner_background"/>

        <!-- Expense Type -->
        <Spinner
            android:id="@+id/spExpenseType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/spinner_background"/>

        <!-- Merchant / Note -->
        <EditText
            android:id="@+id/etExpenseNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Note / Merchant (optional)"
            android:textColor="@android:color/white"
            android:textColorHint="@color/premiumHintColor"
            android:backgroundTint="@color/premiumInputTint"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Save Expense"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/premiumButtonColor"/>

    </LinearLayout>
</ScrollView>
