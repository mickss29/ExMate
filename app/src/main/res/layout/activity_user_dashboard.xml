<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E1A2B">

    <!-- Welcome -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, User"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Income Card -->
    <TextView
        android:id="@+id/tvIncome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Income: ₹ 0.00"
        android:textSize="20sp"
        android:textColor="#4CAF50"
        android:padding="16dp"
        android:background="@drawable/card_midnight"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Expense Card -->
    <TextView
        android:id="@+id/tvExpense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Expense: ₹ 0.00"
        android:textSize="20sp"
        android:textColor="#F44336"
        android:padding="16dp"
        android:background="@drawable/card_midnight"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvIncome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Balance Card -->
    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Balance: ₹ 0.00"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#03A9F4"
        android:padding="16dp"
        android:background="@drawable/card_midnight"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvExpense"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Add Income Button -->
    <Button
        android:id="@+id/btnAddIncome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="➕ Add Income"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="#4CAF50"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvBalance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAddExpense"/>

    <!-- Add Expense Button -->
    <Button
        android:id="@+id/btnAddExpense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="➖ Add Expense"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="#F44336"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvBalance"
        app:layout_constraintStart_toEndOf="@id/btnAddIncome"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
