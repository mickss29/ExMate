<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E1B2A"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ================= SUMMARY CARD ================= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvMonthTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spent this Month"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#111827"/>

                <!-- Chart + Stats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart"
                        android:layout_width="180dp"
                        android:layout_height="180dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:id="@+id/tvTotalBudget"
                            android:text="Total Budget\n₹0"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>

                        <TextView
                            android:id="@+id/tvSpent"
                            android:text="Spent\n₹0"
                            android:textColor="#DC2626"
                            android:layout_marginTop="6dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>

                        <TextView
                            android:id="@+id/tvAvailable"
                            android:text="Available\n₹0"
                            android:textColor="#16A34A"
                            android:layout_marginTop="6dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>

                        <TextView
                            android:id="@+id/tvUnallocated"
                            android:text="Unallocated\n₹0"
                            android:layout_marginTop="6dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Mini Stats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/tvIncome"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Income\n₹0"
                        android:gravity="center"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvExpense"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Expense\n₹0"
                        android:gravity="center"
                        android:textColor="#DC2626"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvSavings"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Savings\n₹0"
                        android:gravity="center"
                        android:textColor="#7C3AED"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ================= CATEGORY LIST ================= -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budgeted Categories"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
