<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#0E1A2B">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export Report"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"/>

    <!-- THIS MONTH -->
    <TextView
        android:id="@+id/optionThisMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“… This Month"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:padding="14dp"
        android:background="@drawable/bg_bottomsheet_item"
        android:layout_marginBottom="8dp"/>

    <!-- LAST MONTH -->
    <TextView
        android:id="@+id/optionLastMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“… Last Month"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:padding="14dp"
        android:background="@drawable/bg_bottomsheet_item"
        android:layout_marginBottom="8dp"/>

    <!-- EXPORT CUSTOM RANGE -->
    <TextView
        android:id="@+id/optionPdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“„ Export Selected Range"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:padding="14dp"
        android:background="@drawable/bg_bottomsheet_item"
        android:layout_marginBottom="8dp"/>

    <!-- ðŸ§¹ CLEAR CUSTOM RANGE -->
    <TextView
        android:id="@+id/optionClearRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ§¹ Clear Custom Range"
        android:textSize="15sp"
        android:textColor="#FFD54F"
        android:padding="14dp"
        android:background="@drawable/bg_bottomsheet_item"
        android:layout_marginBottom="12dp"
        android:visibility="gone"/>

    <!-- CANCEL -->
    <TextView
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="15sp"
        android:textColor="#FF5252"
        android:gravity="center"
        android:padding="12dp"/>
</LinearLayout>
