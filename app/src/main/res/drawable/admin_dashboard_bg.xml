<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- base -->
    <item>
        <shape>
            <solid android:color="#ECF4FF" />
        </shape>
    </item>

    <!-- top shine -->
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#F9FCFF"
                android:endColor="#E3EEFB" />
        </shape>
    </item>

    <!-- bottom depth -->
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#D7E6F8"
                android:endColor="#F1F7FF" />
        </shape>
    </item>

</layer-list>
